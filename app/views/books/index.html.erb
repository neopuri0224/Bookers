<!DOCTYPE html>
<html>
  <head>
  	<meta charset="utf8">
  </head>
  <body>
  	<% if flash[:notice] %>
  		<div class="flash">
  		  	<%= flash[:notice] %>
  		</div>
  	<% end %>
  	<h1>Books</h1>
  	<div class="index-box">
  	  <table>
  	  	<tr>
  	  		<thead>
  	  			<th>Title</th>
  	  		    <th>Body</th>
  	  		    <th colspan="3"></th>
  	  	    </thead>
  	  	</tr>
  	  	<tbody>
  	  		<% @books.each do |book| %>
  	  		<tr>
  	  			<td> <%= book.title %></td>
  	  			<td> <%= book.category %></td>
  	  			<td> 
  	  				<%= link_to "Show", book_path(book.id),class:"show_1" %>
  	  			</td>
  	  			<td>
  	  				<%= link_to "Edit", edit_book_path(book.id),class:"edit_1" %>
  	  			</td>
  	  			<td>
  	  				<%= link_to "Destroy", book_path(book.id), method: :delete,class:"destroy_1" %>
  	  			</td>
  	  		</tr>
  	  		<% end %>
  	  	</tbody>
  	  </table>
  	</div>
  	<section class="New-box">
  		<h1>New Book</h1>
  		<%= form_for(@book) do |f| %>
  		    <h4 class="new-title">Title
  				<%= f.text_field :title,class:"book_title" %>
  			</h4>
  			<h4 class="new-body">Body
  				<%= f.text_area :category,class:"book_body" %>
  			</h4>
  			<%= f.submit 'Create Book' %>
  		<% end %>
  	</section>
  <body>
</html>
