<!DOCTYPE html>
<html>
<head>
	<meta chaeset="utf8">
</head>
<body>
	<section class="edit-box">
  		<h1>Editing Book</h1>
  		<%= form_for(@book) do |f| %>
  		    <h4 class="edit-title">Title
  				<%= f.text_field :title %>
  			</h4>
  			<h4 class="edit-body">Body
  				<%= f.text_area :category %>
  			</h4>
  			<%= f.submit 'Update Book' %>
  		<% end %>

  		<%= link_to "Show", book_path(@book),class:"show_2" %>
  		<%= link_to "Back", books_path,class:"back_2" %>
  	</section>
</body>
</html>